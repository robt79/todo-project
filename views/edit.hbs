
<div class="container-fluid">
  <nav class="navbar navbar-default ">
  <div class="container-fluid">
    <div class="navbar-header alert-info">
      <a class="navbar-brand" href="/todo/">
        <!-- <img alt="Home" src=""> -->
        <h4>ToDo</h4>
      </a>
    </div>
  </div>
</nav>



<form class="form" action="/todo/{{id}}?_method=PUT" method="post">
  <div class="form-group">
    <label for="title">Title</label>
    <input value="{{title}}" type="text" class="form-control" id="title" placeholder="Enter a todo" name="title">
  </div>
  <div class="form-group">
    <label for="description">Description</label>
    <textarea value="{{description}}" type="text" class="form-control" id="description" placeholder="Enter a description" name="description">
    </textarea>
  </div>
  <div class="form-group">
    <label for="priority">Importance</label>
    <select class="form-control" id="priority" name="priority">
      {{#select priority}}
      <option value="1">1</option>
      <option value="2">2</option>
      <option value="3">3</option>
      <option value="4">4</option>
      <option value="5">5</option>
      {{/select}}
    </select>
  </div>
  <button type="submit" class="btn btn-default btn-primary">
    Update
  </button>

</div>
